{
  "name": "fitbridge",
  "productName": "FitBridge",
  "version": "1.0.9",
  "description": "Bridge fitness devices to FTMS for apps like Zwift and TrainerDay",
  "main": ".vite/build/main.js",
  "private": true,
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "ftms:build:win": "dotnet publish FTMSBluetoothForwarder/FTMSBluetoothForwarder.csproj -c Release -r win-x64 -o resources",
    "ftms:build": "npm run ftms:build:win",
    "build:all": "npm run ftms:build && npm run make",
    "test:mock": "electron test-mock/"
  },
  "keywords": [],
  "author": {
    "name": "Dan Dumitrescu",
    "email": "dan.dumitrescu@live.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
    "@electron-forge/plugin-fuses": "^7.11.1",
    "@electron-forge/plugin-vite": "^7.11.1",
    "@electron/fuses": "^1.8.0",
    "@electron/notarize": "^2.5.0",
    "@electron/osx-sign": "^1.3.3",
    "@electron/universal": "^2.0.3",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/node": "^18.19.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "electron": "40.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "typescript": "~4.5.4",
    "vite": "^5.4.21"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "optionalDependencies": {
    "@abandonware/bleno": "^0.6.0"
  }
}
